@model Microsoft.Samples.DPE.BlobShare.Web.Models.BlobSetViewModel

@{
    ViewBag.Title = "Blob Share | New Blob Set";
}

<h1>@Html.ActionLink("Blob Sets", "Index")</h1>
<h2>New Blob Set</h2>

@using (Html.BeginForm())
{
    <div class="form">
        <div class="left-box">
            <div class="editor-label">Title</div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Name, new { style = "width:400px;" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
            <div class="editor-label">Description</div>
            <div class="editor-field">
                @Html.TextAreaFor(m => m.Description, new { style = "width:400px;" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>
            <div class="editor-label">
                <label>
                	@Html.CheckBoxFor(m => m.AddPermissions)
                	Add Permissions?
                </label>	
            </div>
        </div>
        <div class="submit clear">
            <input type="submit" value="Create" />
        </div>
    </div>
}
