@model Microsoft.Samples.DPE.BlobShare.Web.Models.BlobSetViewModel

@{
    ViewBag.Title = "Blob Share | Edit Blob Set";
}

<h1>@Html.ActionLink("Blob Sets", "Index")</h1>
<h2>@Html.ActionLink(this.Model.OriginalName, "Details", new { id = this.Model.BlobSetId })</h2>

<ul class="actions">
    <li>@Html.ActionLink("Details", "Details", new { id = this.Model.BlobSetId }, new { @class = "btn details" })</li>
    <li>@Html.ActionLink("Permissions", "Permissions", new { id = this.Model.BlobSetId }, new { @class = "btn permissions" })</li>
</ul>

@using (Html.BeginForm())
{
    <div class="form">
        <div class="left-box">
            <div class="editor-label">Title</div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Name, new { style = "width:400px;" })
                @Html.ValidationMessageFor(m => m.Name)
                @Html.HiddenFor(m => m.OriginalName)
            </div>
            <div class="editor-label">Description</div>
            <div class="editor-field">
                @Html.TextAreaFor(m => m.Description, new { style = "width:400px;" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>
        </div>
        <div class="submit clear">
            <input type="submit" value="Update" />
        </div>
    </div>
} 

